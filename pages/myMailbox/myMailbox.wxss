page{
  background-color: #F4F5F7;
}

.my-inbox {
  height: 850rpx;
  width: 750rpx;
  background-color: #F4F5F7;
  padding-top: 25rpx;
  
}

.user-card {
  width: 690rpx;
  height: 250rpx;
  background-color:white;
  margin-left: 30rpx;
  border-radius: 20rpx;
  box-shadow: rgb(228, 228, 228) 3rpx 3rpx 3rpx 3rpx;
  margin-bottom: 25rpx;
}

.user-type {
  width: 150rpx;
  height: 50rpx;
  font-size: 30rpx;
  padding-left: 35rpx;
  font-weight: bold;
  padding-top: 30rpx;
  font-weight: 500;
  letter-spacing: 3rpx;
  color:rgb(136, 136, 136);
}

.info{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-left: 35rpx;
  padding-right: 35rpx;
  margin-top: 20rpx;
}

.user-name {
  font-size: 36rpx;
  font-weight: bold;
  letter-spacing: 2rpx;
}

.user-account {
  margin-top: 10rpx;
  font-size: 28rpx;
  font-weight: bold;
}

.user-icon {
  width: 100rpx;
  height: 100rpx;
  background-color: rgb(244, 244, 244);
  padding: 10rpx 10rpx;
  border-radius: 10rpx;
  box-shadow: rgb(206, 206, 206) 2rpx 2rpx 2rpx 2rpx;
}

.image-info {
  width: 100rpx;
  height: 100rpx;
}

.setting {
  margin-top: 40rpx;
}
