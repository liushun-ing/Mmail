.title-box {
    padding: 35rpx;
    font-size: 55rpx;
    font-weight: 550;
    letter-spacing: 6rpx;
}

.register-button {
    display: flex;
    justify-content: center;
    padding-top: 50rpx;
}

.login-button {
    margin-left: 230rpx;
    width: 350rpx;
    padding-top: 30rpx;
    color: rgb(25, 137, 250);
}

.login-navigator {
    color: rgb(3, 51, 99);
}

.pass_tip {
    padding: 20rpx 20rpx;
    color: #6b6b6b;
    word-break: break-all;
    font-size: 28rpx;
}

.pass_tip::before {
    content: "*";
    color: red;
}